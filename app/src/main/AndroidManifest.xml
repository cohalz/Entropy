<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cohalz.entropy" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Normal"
            android:label="VS-Mode"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".StartMenu"
            android:label="@string/title_activity_start_menu"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BluetoothActivity"
            android:label="Bluetooth-VS-Mode"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".p1win"
            android:label="@string/title_activity_p1win" >
        </activity>
        <activity
            android:name=".p2win"
            android:label="@string/title_activity_p1win" >
        </activity>
        <activity
            android:name=".VSCPU"
            android:label="@string/title_activity_vscpu" >
        </activity>
    </application>
    <supports-screens android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:anyDensity="true"/>
</manifest>
